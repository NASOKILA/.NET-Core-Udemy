@model Book
@{
    ViewData["Title"] = "Delete";
}


<br />

<h2>Delete Book</h2>

<hr />

<form method="post" asp-action="Delete">
    <div class="row form-border">
        <br />
        <input type="hidden" asp-for="@Model.Id" class="form-control"/>

        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="@Model.ISBN"></label>
                </div>
                <div class="col-sm-4">
                    <input type="text" value="@Model.ISBN" class="form-control" disabled />
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="@Model.Title"></label>
                </div>
                <div class="col-sm-4">
                    <input value="@Model.Title" type="text" class="form-control" disabled />
                </div>
            </div>
        </div>


        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="@Model.Author"></label>
                </div>
                <div class="col-sm-4">
                    <input value="@Model.Author" type="text" class="form-control" disabled />
                </div>
            </div>
        </div>


        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="@Model.Avaliable"></label>
                </div>
                <div class="col-sm-4">
                    <input value="@Model.Avaliable" type="checkbox" class="form-control" disabled />
                </div>
            </div>
        </div>

        <br />

        <div class="form-group">
            <a asp-action="Index" class="btn btn-primary">Back <span class="glyphicon glyphicon-backward"></span></a>
            <button type="submit" class="btn btn-danger">Delete <span class="glyphicon glyphicon-trash"></span></button>
        </div>
    </div>
</form>

