@model Book
@{
    ViewData["Title"] = "Edit";
}

<br />

<h2>Edit Book</h2>

<hr />

<form method="post" asp-action="Edit">
    <div class="row form-border">
        <br />

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="@Model.ISBN"></label>
                </div>
                <div class="col-sm-4">
                    <input type="text" asp-for="@Model.ISBN" class="form-control" />
                </div>
                <span asp-validation-for="@Model.ISBN" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="@Model.Title"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="@Model.Title" type="text" class="form-control" />
                </div>
                <span asp-validation-for="@Model.Title" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="@Model.Author"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="@Model.Author" type="text" class="form-control" />
                </div>
                <span asp-validation-for="@Model.Author" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="@Model.Avaliable"></label>
                </div>
                <div class="col-sm-4">
                    <input type="checkbox" class="form-control" asp-for="@Model.Avaliable" />
                </div>
                <span asp-validation-for="@Model.Avaliable" class="text-danger"></span>
            </div>
        </div>

        <br />

        <div class="form-group">
            <a asp-action="Index" class="btn btn-primary">Back <span class="glyphicon glyphicon-backward"></span></a>
            <button type="submit" class="btn btn-warning">Update <span class="glyphicon glyphicon-refresh"></span></button>
        </div>
    </div>
</form>
